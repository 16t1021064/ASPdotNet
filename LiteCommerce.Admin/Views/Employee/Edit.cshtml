@model LiteCommerce.DomainModels.Employee
@{
}

<form method="post" action="~/Employee/Save/@Model.EmployeeID">
    <div class="form-group">
    @Html.ValidationSummary()
    </div>
    <div class="form-group">
        <label>Tên anh nhân viên:</label>
        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @autofocus = "autofocus" })
        @Html.ValidationMessageFor(m => m.FirstName)
    </div>
    <div class="form-group">
        <label>Họ anh nhân viên:</label>
        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control"})
        @Html.ValidationMessageFor(m => m.LastName)
    </div>
    <div class="form-group">
        <label>Ngày sinh:</label>
        @Html.TextBoxFor(m => m.BirthDate, new { @class = "form-control", @type = "date" })   
    </div>
    <div class="form-group">
        <label>Ảnh đại diện:</label>
        @Html.TextBoxFor(m => m.Photo, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Ghi chú:</label>
        @Html.TextBoxFor(m => m.Notes, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Email:</label>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Password:</label>
        <input type="password" class="form-control" value="@Model.Password"/>
    </div>
    <div class="row">
        <div class="col-md-6">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-save"></i> Lưu dữ liệu
            </button>
        </div>
        <div class="col-md-6 text-right">
            <a href="~/Employee/Index" class="btn btn-warning">
                <i class="fa fa-window-close"></i> Bỏ qua
            </a>
        </div>
    </div>
</form>

