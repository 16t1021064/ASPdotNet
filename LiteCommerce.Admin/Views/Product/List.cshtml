@model IEnumerable<LiteCommerce.DomainModels.Product>
@{
    Layout = null;
}
<div class="text-left">
    <p>Có tất cả <strong>1024</strong> nhà cung cấp. Bạn đang ở trang <strong>1</strong> trên tổng số <strong>100</strong> trang.</p>
</div>
<table class="table table-bordered table-hover table-striped">
    <thead>
    <th>Tên hàng</th>
    <th>Đơn vị tính</th>
    <th>Giá hàng</th>
    <th>Ảnh minh họa</th>
    <th></th>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>
                    <a href="~/Product/Details/@item.ProductID">
                        @item.ProductName
                    </a>
                </td>
                <td>
                   @item.Unit
                </td>
                <td>
                    @item.Price
                </td>
                <td>
                    <img src="@item.Photo" />
                </td>
                <td class="text-right">
                    <a href="~/Product/Edit/@item.ProductID" class="btn btn-xs btn-info">
                        <i class="fa fa-edit"></i>
                    </a>
                    <a href="~/Product/Delete/@item.ProductID" class="btn btn-xs btn-danger">
                        <i class="fa fa-remove"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="text-center">
    <ul class="pagination">
        @for (int i = 1; i <= 5; i++)
        {

            <li class="active"><a href="#">@i</a></li>
        }
    </ul>
</div>
