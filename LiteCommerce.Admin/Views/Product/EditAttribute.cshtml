@model LiteCommerce.DomainModels.ProductAttribute

<form action="~/Product/SaveAttribute/@Model.AttributeID" method="post">
    <div class="form-group">
        @Html.ValidationSummary()
    </div>
    @Html.HiddenFor(m => m.AttributeID)
    @Html.HiddenFor(m => m.ProductID)
    <div class="form-group">
        <label>Tên thuộc tính:</label>
        @Html.TextBoxFor(m => m.AttributeName, new { @class = "form-control " , @autofocus="autofocus"})
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Giá trị thuộc tính:</label>
                @Html.TextBoxFor(m => m.AttributeValue, new { @class = "form-control " })
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Thứ tự hiển thị:</label>
                @Html.TextBoxFor(m => m.DisplayOrder, new { @class = "form-control " })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-save"></i> Lưu dữ liệu
            </button>
        </div>
        <div class="col-md-6 text-right">
            <a href="javascript:history.go(-1)" class="btn btn-warning">
                <i class="fa fa-window-close"></i> Bỏ qua
            </a>
        </div>
    </div>
</form>

